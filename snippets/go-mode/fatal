# -*- mode: snippet -*-
# name: fatal
# key: fatal
# contributor : @yuansl
# --
func fatal(v ...any) {
     pc, file, line, _ := runtime.Caller(1)
     fn := runtime.FuncForPC(pc)

     fmt.Fprintln(os.Stderr, "fatal error: ", v)
     fmt.Fprintf(os.Stderr, "%s:\n\t%s:%d\n", fn.Name(), file, line)
     os.Exit(1)
}
