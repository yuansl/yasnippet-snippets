# -*- mode: snippet -*-
# name: fatalf
# key: fatalf
# contributor : @yuansl
# --
func fatalf(format string, v ...any) {
     pc, file, line, _ := runtime.Caller(1)
     fn := runtime.FuncForPC(pc)

     fmt.Fprintf(os.Stderr, "fatal error: "+format, v...)
     fmt.Fprintf(os.Stderr, "\t as %s:%s:%d\n", fn.Name(), file, line)
     os.Exit(1)
}
